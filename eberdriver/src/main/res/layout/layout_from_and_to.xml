<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/activity_horizontal_margin"
    android:layout_marginBottom="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingStart="@dimen/dimen_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:visibility="visible">

    <LinearLayout
        android:id="@+id/llMapAddress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llPickupMark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:gravity="center">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    app:srcCompat="@drawable/user_pin" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:background="#B2B2B2"/>
            </LinearLayout>

            <com.goride.provider.components.MyFontTextView
                android:id="@+id/tvFareSrc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/activity_horizontal_padding"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="@string/text_pickup_address"
                android:textColor="@color/color_black"
                android:textSize="@dimen/size_general_small" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llTripStops"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_horizontal_padding"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llDestMark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:gravity="center"
                android:paddingBottom="@dimen/activity_horizontal_padding">
                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:background="#B2B2B2"/>
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    app:srcCompat="@drawable/destination_pin" />

            </LinearLayout>

            <com.goride.provider.components.MyFontTextView
                android:id="@+id/tvFareDest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/activity_horizontal_padding"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="@string/text_destination_address"
                android:textColor="@color/color_black"
                android:textSize="@dimen/size_general_small" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>





