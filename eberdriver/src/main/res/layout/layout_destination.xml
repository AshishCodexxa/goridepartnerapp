<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/toolbar_bg_rounded_bottom"
    android:elevation="@dimen/toolbar_elevation"
    android:orientation="vertical"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:visibility="visible">


    <LinearLayout
        android:id="@+id/llMapAddress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llPickupMark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:gravity="center">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    app:srcCompat="@drawable/user_pin" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:background="#B2B2B2"/>
            </LinearLayout>

            <com.goride.provider.components.MyFontTextView
                android:id="@+id/tvMapPickupAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/activity_horizontal_padding"
                android:paddingStart="@dimen/dimen_bill_line"
                android:drawablePadding="@dimen/activity_horizontal_padding"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="@string/text_pickup_address"
                android:textColor="@color/color_app_text"
                android:textSize="@dimen/size_general_small" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llTripStops"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>


        <LinearLayout
            android:id="@+id/lv_endDestination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_horizontal_padding"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llDestMark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:gravity="center"
                android:paddingBottom="@dimen/activity_horizontal_padding">
                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:background="#B2B2B2"/>
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    app:srcCompat="@drawable/destination_pin" />

            </LinearLayout>

            <com.goride.provider.components.MyFontTextView
                android:id="@+id/tvMapDestinationAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingStart="@dimen/dimen_bill_line"
                android:layout_marginEnd="@dimen/activity_horizontal_padding"
                android:drawablePadding="@dimen/activity_horizontal_padding"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="@string/text_destination_address"
                android:textColor="@color/color_app_text"
                android:textSize="@dimen/size_general_small" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llScheduleTrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_bill_line"
        android:visibility="gone">

        <com.goride.provider.components.MyFontTextView
            android:id="@+id/tvScheduleTripTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dimen_bill_line"
            android:paddingTop="@dimen/dimen_bill_margin_two"
            android:paddingEnd="@dimen/dimen_bill_line"
            android:paddingBottom="@dimen/dimen_bill_margin_two"
            android:text="@string/text_schedule_pickup_time"
            android:textColor="@color/color_black"
            android:textSize="@dimen/size_general_small" />

    </LinearLayout>
</LinearLayout>




