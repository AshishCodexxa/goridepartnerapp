<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/dialog_bg"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:gravity="center"
            android:textSize="22sp"
            android:background="@null"
            android:textColor="@color/instabug_annotation_color_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Otp"/>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:padding="10dp"
            app:cardBackgroundColor="@color/color_app_edit_text_border"
            app:cardCornerRadius="20dp"
            android:layout_height="match_parent">
        <EditText
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:id="@+id/ed_otp"
            android:layout_marginTop="5dp"
            android:textColor="@color/color_black"
            android:layout_width="200dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:background="@null"
            android:maxLength="4"
            android:focusable="true"
            android:textSize="25sp"
            />
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"/>
        <Button
            android:layout_marginTop="10dp"
         android:paddingEnd="30dp"
            android:paddingStart="30dp"
            android:id="@+id/btn_start_ride"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Start Ride"
            android:layout_margin="10dp"
            android:textColor="@color/color_white"
            android:background="@drawable/selector_round_rect_shape_blue"/>


    </LinearLayout>

